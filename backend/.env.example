# AlbLingo Backend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# Database URL (PostgreSQL for production, SQLite for development)
# Render PostgreSQL format: postgres://user:password@host:port/database
# SQLAlchemy requires: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///./dev.db

# Secret key for JWT token signing (generate a secure random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# Comma-separated list of allowed CORS origins (your frontend URLs)
# Example: https://your-app.vercel.app,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment mode: development, staging, production
ENVIRONMENT=development

# Enable debug mode (set to false in production)
DEBUG=true

# Server configuration (usually set by the hosting platform)
HOST=0.0.0.0
PORT=8000

# JWT token expiration in minutes (default: 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# OPTIONAL: AI SERVICES
# =============================================================================

# OpenAI API key (for AI features)
OPENAI_API_KEY=

# Anthropic API key (for Claude AI features)
ANTHROPIC_API_KEY=

# Azure Speech Services (for text-to-speech and speech recognition)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=westeurope
