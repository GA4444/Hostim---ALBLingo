    padding: var(--space-2) !important;
    margin: var(--space-1);
  }

  .class-grid {
    grid-template-columns: 1fr !important;
    gap: var(--space-2) !important;
  }

  .class-card {
    padding: var(--space-3) !important;
    margin: var(--space-1);
    min-height: 120px;
  }

  .course-preview-grid {
    grid-template-columns: 1fr !important;
    gap: var(--space-2) !important;
  }

  .course-preview-card {
    padding: var(--space-3) !important;
    min-height: 140px;
  }

  .level-grid {
    grid-template-columns: 1fr !important;
    gap: var(--space-2) !important;
