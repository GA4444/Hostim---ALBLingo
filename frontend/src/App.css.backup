  }

  .submit-btn {
    width: 100% !important;
    padding: var(--space-3) !important;
    font-size: var(--font-size-md) !important;
  }

  /* Auth Forms */
  .auth-form {
    padding: var(--space-3) !important;
    margin: var(--space-2) !important;
  }

  .auth-input {
    font-size: 16px !important; /* Prevents zoom on iOS */
    padding: var(--space-3) !important;
    margin-bottom: var(--space-2) !important;
  }

  .auth-btn {
    width: 100% !important;
    padding: var(--space-3) !important;
    font-size: var(--font-size-md) !important;
  }

