/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  height: 100%;
  overflow-x: hidden;
  scroll-behavior: smooth;
}

body {
  font-family: var(--font-family);
  background: var(--bg-gradient);
  color: var(--text-primary);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: var(--font-size-base);
}

#root {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Advanced Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideInLeft {
  from { opacity: 0; transform: translateX(-30px); }
  to { opacity: 1; transform: translateX(0); }
}

@keyframes slideInRight {
  from { opacity: 0; transform: translateX(30px); }
  to { opacity: 1; transform: translateX(0); }
}

@keyframes bounceIn {
  0% { opacity: 0; transform: scale(0.3); }
  50% { opacity: 1; transform: scale(1.05); }
  70% { transform: scale(0.9); }
  100% { opacity: 1; transform: scale(1); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes shimmer {
  0% { background-position: -200px 0; }
  100% { background-position: calc(200px + 100%) 0; }
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* Utility Classes */
.animate-fade-in { animation: fadeIn var(--duration-300) ease-out; }
.animate-slide-left { animation: slideInLeft var(--duration-300) ease-out; }
.animate-slide-right { animation: slideInRight var(--duration-300) ease-out; }
.animate-bounce-in { animation: bounceIn var(--duration-500) ease-out; }
.animate-pulse { animation: pulse 2s infinite; }
.animate-float { animation: float 3s ease-in-out infinite; }
.animate-rotate { animation: rotate 2s linear infinite; }

/* App Container */
.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  width: 100%;
  background: var(--bg-gradient);
}

/* Advanced Header with Gamification */
.header {
  background: var(--bg-primary);
  box-shadow: var(--shadow-lg);
  padding: var(--space-2) var(--space-6);
  position: sticky;
  top: 0;
  z-index: var(--z-sticky);
  width: 100%;
  border-bottom: 2px solid var(--border-accent);
  min-height: 60px;
}

.header-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-6);
  max-width: 1400px;
  margin: 0 auto;
}

.header-main {
  display: flex;
  align-items: center;
  gap: var(--space-6);
  flex: 1;
}

.header-navigation {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  flex: 1;
  justify-content: center;
}

.nav-btn {
  background: var(--bg-white);
  color: var(--text-secondary);
  border: 2px solid var(--border-light);
  border-radius: var(--radius-lg);
  padding: var(--space-2) var(--space-4);
  font-size: var(--font-size-sm);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--duration-300) ease;
  box-shadow: var(--shadow-sm);
  white-space: nowrap;
}

.nav-btn:hover {
  border-color: var(--primary-green);
  color: var(--primary-green);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.nav-btn.active {
  background: var(--primary-green);
  color: var(--text-white);
  border-color: var(--primary-green);
  box-shadow: var(--shadow-md);
}

.header-logo {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  flex-shrink: 0;
}

.header h1 {
  color: var(--primary-green);
  font-size: var(--font-size-xl);
  font-weight: 800;
  margin: 0;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
  background: var(--bg-gradient-green);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.5px;
}

.header-emoji {
  font-size: var(--font-size-2xl);
  animation: float 3s ease-in-out infinite;
}

/* User Progress Bar */
.user-progress {
  width: 200px;
  background: var(--bg-tertiary);
  border-radius: var(--radius-full);
  height: 6px;
  overflow: hidden;
  position: relative;
  margin: 0;
  flex-shrink: 0;
}

.user-progress-fill {
  height: 100%;
  background: var(--bg-gradient-green);
  border-radius: var(--radius-full);
  transition: width var(--duration-500) ease-out;
  position: relative;
}

.user-progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  animation: shimmer 2s infinite;
}

/* User Info Section */
.user-info {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  flex-shrink: 0;
}

.user-stats {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.stat-item {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  background: var(--bg-secondary);
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-light);
}

.stat-icon {
  font-size: var(--font-size-lg);
}

.stat-value {
  font-size: var(--font-size-sm);
  font-weight: 600;
  color: var(--text-secondary);
  white-space: nowrap;
}

.logout-btn {
  background: var(--secondary-red);
  color: var(--text-white);
  border: none;
  border-radius: var(--radius-lg);
  padding: var(--space-2) var(--space-4);
  font-size: var(--font-size-sm);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--duration-300) ease;
  box-shadow: var(--shadow-sm);
}

.logout-btn:hover {
  background: var(--secondary-red-hover);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

/* Main Tag Layout */
.main {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100%;
  min-height: calc(100vh - 140px);
  position: relative;
  z-index: 40;
  padding-top: 150px; /* Significantly increased padding to ensure content clears the header */
  margin-top: 0; /* Remove any conflicting margin */
}

/* Main Content Layout */
.main-content {
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  padding: var(--space-4);
  gap: var(--space-6);
  max-width: 1400px;
  margin: 0 auto;
  align-items: flex-start;
  position: relative;
  z-index: 50;
  margin-top: 0; /* Remove extra margin since we added padding to .main */
}

/* Enhanced Navigation Design */
.sidebar {
    background: var(--bg-white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    border: 2px solid var(--border-light);
    padding: var(--space-6);
    width: 320px;
    min-height: calc(100vh - 140px);
    overflow-y: auto;
    position: sticky;
    top: 20px; /* Reduce top offset since main now has padding */
    animation: fadeIn var(--duration-500) ease;
    flex-shrink: 0;
}

.sidebar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--bg-gradient-green);
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
}

.sidebar-section {
    margin-bottom: var(--space-8);
    position: relative;
}

.sidebar-section h3 {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 var(--space-4) 0;
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--border-light);
    position: relative;
}

.sidebar-section h3::before {
    content: 'üèÜ';
    margin-right: var(--space-2);
    animation: pulse 2s infinite;
}

/* Class List Styling */
.class-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
}

.class-item {
    background: var(--bg-white);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    min-height: 80px;
    border: 2px solid var(--border-light);
    cursor: pointer;
    transition: all var(--duration-300) ease;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.class-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(88, 204, 2, 0.1), transparent);
    transition: left var(--duration-500) ease;
}

.class-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-green);
}

.class-item:hover::before {
    left: 100%;
}

.class-item.selected {
    transform: scale(1.02);
    box-shadow: var(--shadow-2xl);
    border-color: var(--primary-green);
    background: var(--bg-gradient-green);
    color: var(--text-white);
}

.class-item.selected .class-name {
    color: var(--text-white);
}

.class-item.unlocked {
    background: var(--bg-gradient-green);
    color: var(--text-white);
    border-color: var(--primary-green);
}

.class-item.unlocked::after {
    content: '‚ú®';
    position: absolute;
    top: var(--space-2);
    right: var(--space-2);
    animation: rotate 3s infinite linear;
}

.class-item.locked {
    background: var(--bg-tertiary);
    color: var(--text-muted);
    opacity: 0.7;
    cursor: not-allowed;
}

.class-item.locked::after {
    content: 'üîí';
    position: absolute;
    top: var(--space-2);
    right: var(--space-2);
    font-size: var(--font-size-lg);
}

.class-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.class-name {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--text-primary);
}

.class-progress {
    width: 100%;
    height: 8px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-full);
    overflow: hidden;
    margin-top: var(--space-3);
}

.class-progress-fill {
    height: 100%;
    background: var(--bg-gradient-green);
    border-radius: var(--radius-full);
    transition: width var(--duration-300) ease;
}

.class-locked-message {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    text-align: center;
    margin-top: var(--space-2);
}

/* Content Area */
.content-area {
    flex: 1;
    min-height: calc(100vh - 140px);
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    background: var(--bg-white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    border: 2px solid var(--border-light);
    padding: var(--space-6);
    padding-top: var(--space-4); /* Reduced since main now has sufficient padding */
    overflow-y: auto;
    position: relative;
    z-index: 60;
    margin-top: 0; /* Remove any conflicting margin */
}

/* Welcome Screen */
.welcome-screen {
    text-align: center;
    padding: var(--space-8);
    padding-top: var(--space-4); /* Reduced since main container now has proper padding */
    background: linear-gradient(135deg, var(--bg-accent) 0%, var(--bg-white) 100%);
    border-radius: var(--radius-xl);
    border: 2px solid var(--border-light);
}

.welcome-emoji {
    font-size: var(--font-size-5xl);
    margin-bottom: var(--space-4);
    animation: bounce 2s ease-in-out infinite;
}

.welcome-screen h2 {
    font-size: var(--font-size-3xl);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
    font-weight: 700;
}

.welcome-screen p {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
    line-height: 1.6;
}

/* Class Grid */
.class-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-8);
    margin-top: var(--space-8); /* Add top margin to ensure proper spacing from header */
}

.class-card {
    background: var(--bg-white);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    border: 2px solid var(--border-light);
    cursor: pointer;
    transition: all var(--duration-300) ease;
    box-shadow: var(--shadow-md);
    position: relative;
    overflow: hidden;
}

.class-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--bg-gradient-green);
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
}

.class-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-green);
}

.class-card.unlocked {
    border-color: var(--primary-green);
}

.class-card.locked {
    opacity: 0.7;
    background: var(--bg-tertiary);
}

.class-card-header h3 {
    font-size: var(--font-size-xl);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
    font-weight: 700;
}

.class-card p {
