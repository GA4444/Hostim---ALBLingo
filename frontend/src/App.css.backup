    flex-direction: column !important;
    gap: var(--space-2) !important;
    text-align: center;
  }

  .exercise-info h3 {
    font-size: var(--font-size-md) !important;
  }

  .exercise-meta {
    flex-direction: column !important;
    gap: var(--space-1) !important;
    align-items: center;
  }

  .exercise-actions {
    flex-direction: column !important;
    gap: var(--space-2) !important;
  }

  .voice-controls {
    flex-direction: column !important;
    gap: var(--space-2) !important;
  }

  .voice-btn {
    width: 100% !important;
    padding: var(--space-3) !important;
