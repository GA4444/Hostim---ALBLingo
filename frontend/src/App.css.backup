  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 9999;
}

.auth-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="90" cy="90" r="1.5" fill="rgba(255,255,255,0.1)"/></svg>');
  animation: float 20s ease-in-out infinite;
}

.auth-card {
  background: var(--bg-white);
  border-radius: var(--radius-2xl);
  padding: var(--space-8);
  box-shadow: var(--shadow-2xl);
  width: 100%;
  max-width: 450px;
  margin: 0 auto;
  border: 1px solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 10;
  animation: bounceIn var(--duration-700) ease-out;
  transform: translateY(0);
}

.auth-header {
  text-align: center;
  margin-bottom: var(--space-8);
}

.auth-logo {
  font-size: var(--font-size-5xl);
  margin-bottom: var(--space-4);
  animation: bounceIn 1s ease-out;
}

.auth-header h2 {
  background: linear-gradient(135deg, #58cc02, #46a001);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-size: var(--font-size-3xl);
  font-weight: 900;
  margin-bottom: var(--space-3);
  line-height: 1.2;
}

.auth-header p {
  color: var(--text-secondary);
  font-size: var(--font-size-lg);
  line-height: 1.6;
}

.auth-tabs {
  display: flex;
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--space-1);
  margin-bottom: var(--space-8);
  box-shadow: var(--shadow-sm);
}

.auth-tab {
  flex: 1;
  padding: var(--space-3) var(--space-4);
  border: none;
  background: transparent;
  color: var(--text-secondary);
  font-weight: 600;
  cursor: pointer;
  border-radius: var(--radius-md);
  transition: all var(--duration-300);
  min-height: 48px;
  font-size: var(--font-size-base);
}

.auth-tab:hover {
  color: var(--text-primary);
}

.auth-tab.active {
  background: var(--bg-white);
  color: var(--primary-green);
  box-shadow: var(--shadow-sm);
  font-weight: 700;
}

.auth-form {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  width: 100%;
  max-width: 100%;
}

.auth-input {
  padding: var(--space-4);
  border: 2px solid var(--border-light);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  transition: all var(--duration-300);
  min-height: 56px;
  background: var(--bg-white);
}

.auth-input:focus {
  outline: none;
  border-color: var(--primary-green);
  box-shadow: 0 0 0 3px rgba(88, 204, 2, 0.1);
  transform: translateY(-1px);
}

.auth-submit {
  background: var(--bg-gradient-primary);
  color: var(--text-white);
  border: none;
  padding: var(--space-4);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-lg);
  font-weight: 700;
  cursor: pointer;
  transition: all var(--duration-300);
  margin-top: var(--space-4);
  min-height: 56px;
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
}

.auth-submit::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.auth-submit:hover::before {
  left: 100%;
}

.auth-submit:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* Enhanced Registration Form */
.enhanced-registration .form-row {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-4);
}

/* Profile Button Styles */
.profile-btn {
  background: var(--bg-gradient-blue);
  color: var(--text-white);
  border: none;
  border-radius: var(--radius-lg);
  padding: var(--space-3) var(--space-4);
  font-size: var(--font-size-sm);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--duration-300) ease;
  margin-right: var(--space-3);
  box-shadow: var(--shadow-md);
}

.profile-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  background: var(--bg-gradient-blue-dark);
}

/* Profile Modal Styles */
.profile-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  padding: var(--space-4);
}

.profile-modal {
  background: var(--bg-white);
  border-radius: var(--radius-2xl);
  padding: var(--space-8);
  max-width: 600px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: var(--shadow-2xl);
  border: 2px solid var(--border-light);
  animation: bounceIn var(--duration-500) ease-out;
}

.profile-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-6);
  padding-bottom: var(--space-4);
  border-bottom: 2px solid var(--border-light);
}

.profile-modal-header h2 {
  color: var(--text-primary);
  font-size: var(--font-size-2xl);
  font-weight: 700;
  margin: 0;
}

.profile-close-btn {
  background: var(--bg-tertiary);
  border: none;
  border-radius: var(--radius-full);
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  font-size: var(--font-size-lg);
  color: var(--text-secondary);
  transition: all var(--duration-300) ease;
}

.profile-close-btn:hover {
  background: var(--bg-secondary);
  color: var(--text-primary);
}

.profile-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.profile-section {
  background: var(--bg-accent);
  padding: var(--space-6);
  border-radius: var(--radius-xl);
  border: 1px solid var(--border-light);
}

.profile-section h3 {
  color: var(--text-primary);
  font-size: var(--font-size-xl);
  font-weight: 700;
  margin-bottom: var(--space-4);
}

.performance-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-4);
}

.perf-stat {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  padding: var(--space-4);
  background: var(--bg-white);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-light);
}

.perf-icon {
  font-size: var(--font-size-2xl);
}

.perf-info {
  display: flex;
  flex-direction: column;
}

.perf-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  font-weight: 500;
}

.perf-value {
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  font-weight: 700;
}

.profile-form {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.form-group label {
  font-weight: 600;
  color: var(--text-primary);
  font-size: var(--font-size-sm);
}

.form-group input,
.form-group select {
  padding: var(--space-3);
  border: 2px solid var(--border-light);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  transition: all var(--duration-300) ease;
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--primary-green);
  box-shadow: 0 0 0 3px rgba(88, 204, 2, 0.1);
}

.profile-actions {
  display: flex;
  gap: var(--space-4);
  justify-content: flex-end;
  padding-top: var(--space-4);
  border-top: 1px solid var(--border-light);
}

.profile-save-btn {
  background: var(--bg-gradient-green);
  color: var(--text-white);
  border: none;
  border-radius: var(--radius-lg);
  padding: var(--space-3) var(--space-6);
  font-size: var(--font-size-base);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--duration-300) ease;
}

.profile-save-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.profile-cancel-btn {
  background: var(--bg-tertiary);
  color: var(--text-secondary);
  border: none;
  border-radius: var(--radius-lg);
  padding: var(--space-3) var(--space-6);
  font-size: var(--font-size-base);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--duration-300) ease;
}

.profile-cancel-btn:hover {
  background: var(--bg-secondary);
  color: var(--text-primary);
}

/* Responsive Design - Advanced Breakpoints */
@media (min-width: 768px) {
  .auth-container {
    padding: var(--space-8);
  }
  
  .auth-card {
    max-width: 500px;
    padding: var(--space-10);
  }
  
  .profile-modal {
    max-width: 700px;
    padding: var(--space-10);
  }
  
  .performance-stats {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .header-content {
    flex-direction: row;
    justify-content: space-between;
    text-align: left;
  }
}

@media (max-width: 767px) {
  .profile-modal {
    margin: var(--space-4);
    max-height: 95vh;
  }
  
  .performance-stats {
    grid-template-columns: 1fr;
  }
  
  .profile-actions {
    flex-direction: column;
  }
  
  .profile-btn {
    margin-right: var(--space-2);
    padding: var(--space-2) var(--space-3);
    font-size: var(--font-size-xs);
  }
  
  .header h1 {
    font-size: var(--font-size-2xl);
  }
  
  .user-info {
    flex-direction: row;
    align-items: center;
  }
  
  .main-content {
    padding: var(--space-6);
    gap: var(--space-6);
  }
  
  .content {
    padding: var(--space-8);
  }
  
  .welcome-screen {
    padding: var(--space-8);
    padding-top: var(--space-4); /* Consistent padding since main handles spacing */
  }
  
  .welcome-screen h2 {
    font-size: var(--font-size-5xl);
  }
  
  .welcome-screen p {
    font-size: var(--font-size-2xl);
  }
  
  .class-grid,
  .course-grid {
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-6);
  }
  
  .level-grid {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
  }
  
  .course-icon {
    font-size: var(--font-size-5xl);
  }
  
  .enhanced-registration .form-row {
    grid-template-columns: 1fr 1fr;
  }
  
  .enhanced-registration .form-row:last-child {
    grid-template-columns: 1fr;
  }
  
  .message {
    position: fixed;
    top: 100px;
    right: var(--space-8);
    left: auto;
    bottom: auto;
    max-width: 400px;
  }
}

@media (min-width: 1024px) {
  .main-content {
    flex-direction: row;
    padding: var(--space-8);
    gap: var(--space-8);
    max-width: 1400px;
    margin: 0 auto;
  }
  
      .sidebar {
        width: 360px;
        order: 1;
        position: sticky;
        top: 80px;
        height: fit-content;
        max-height: calc(100vh - 100px);
        overflow-y: auto;
    }
  
  .content {
    flex: 1;
    order: 2;
  }
  
  .header-content {
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .class-grid,
  .course-grid {
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    gap: var(--space-8);
  }
  
  .level-grid {
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
  }
  
  .course-icon {
    font-size: var(--font-size-5xl);
  }
  
  .course-selection h2,
  .level-selection h2,
  .exercise-area h2 {
    font-size: var(--font-size-4xl);
  }
  
  .auth-card {
    padding: var(--space-12);
  }
  
  .auth-header h2 {
    font-size: var(--font-size-5xl);
  }
}

@media (min-width: 1440px) {
  .main-content {
    max-width: 1600px;
    padding: var(--space-10);
    gap: var(--space-10);
  }
  
  .sidebar {
    width: 400px;
  }
  
  .class-grid,
  .course-grid {
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--space-10);
  }
  
  .level-grid {
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    gap: var(--space-10);
  }
  
  .course-icon {
    font-size: 6rem;
  }
  
  .header h1 {
    font-size: var(--font-size-2xl);
  }
  
  .welcome-screen h2 {
    font-size: 7rem;
  }
}

/* Touch Device Optimizations */
@media (hover: none) and (pointer: coarse) {
  .course-card:hover,
  .level-card:hover,
  .class-card:hover {
    transform: none;
  }
  
  .course-card:active,
  .level-card:active,
  .class-card:active {
    transform: scale(0.98);
  }
  
  .submit-btn:hover,
  .auth-submit:hover,
  .logout-btn:hover {
    transform: none;
  }
  
  .submit-btn:active,
  .auth-submit:active,
  .logout-btn:active {
    transform: scale(0.95);
  }
}

/* High DPI Displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .course-card::before,
  .class-card::before {
    height: 3px;
  }
}

/* Print Styles */
@media print {
  .sidebar,
  .header,
  .message,
  .ai-insights {
    display: none;
  }
  
  .main-content {
    flex-direction: column;
    padding: 0;
  }
  
  .content {
    box-shadow: none;
    border: 1px solid #ccc;
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* Focus Management */
.course-card:focus-visible,
.level-card:focus-visible,
.class-card:focus-visible {
  outline: 4px solid var(--primary-green);
  outline-offset: 4px;
}

.submit-btn:focus-visible,
.auth-submit:focus-visible,
.logout-btn:focus-visible {
  outline: 4px solid var(--primary-green);
  outline-offset: 4px;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-secondary);
  border-radius: var(--radius-full);
}

::-webkit-scrollbar-thumb {
  background: var(--primary-green);
  border-radius: var(--radius-full);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary-green-hover);
}

/* Level Cards */
.level-card {
    background: var(--bg-white);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    box-shadow: var(--shadow-md);
    border: 2px solid var(--border-light);
    min-height: 120px;
    cursor: pointer;
    transition: all var(--duration-300) ease;
    position: relative;
    overflow: hidden;
}

.level-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--bg-gradient-primary);
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
}

.level-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left var(--duration-500) ease;
}

.level-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-green);
}

.level-card:hover::after {
    left: 100%;
}

.level-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
}

.level-header h3 {
    margin: 0;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
}

.level-progress {
    width: 60px;
    height: 8px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-full);
    overflow: hidden;
}

.level-progress-fill {
    height: 100%;
    background: var(--bg-gradient-green);
    border-radius: var(--radius-full);
    transition: width var(--duration-300) ease;
}

.level-stats {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: var(--space-4);
    font-size: var(--font-size-sm);
}

.level-required {
    color: var(--text-muted);
    font-weight: var(--font-weight-medium);
}

.level-progress-text {
    color: var(--primary-green);
    font-weight: var(--font-weight-bold);
}

/* Enhanced Exercise Area */
.exercise-area {
    padding: var(--space-8);
    animation: fadeIn var(--duration-500) ease;
    position: relative;
    z-index: 100;
    margin-top: var(--space-4);
    background: var(--bg-white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    border: 2px solid var(--border-light);
    min-height: calc(100vh - 200px);
    overflow-y: auto;
}

.exercise-area h2 {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    margin: 0 0 var(--space-4) 0;
    text-shadow: var(--text-shadow);
    background: var(--bg-gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.exercise-area p {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    margin: 0 0 var(--space-6) 0;
    line-height: 1.6;
}

/* Exercise Progress */
.exercise-progress {
    background: var(--bg-white);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-6);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-light);
    position: relative;
    overflow: hidden;
}

.exercise-progress::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--bg-gradient-primary);
}

.exercise-progress-text {
    text-align: center;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
}

.exercise-progress-bar {
    width: 100%;
    height: 12px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-full);
    overflow: hidden;
}

.exercise-progress-fill {
    height: 100%;
    background: var(--bg-gradient-green);
    border-radius: var(--radius-full);
    transition: width var(--duration-500) ease;
    position: relative;
}

.exercise-progress-fill::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    animation: shimmer var(--duration-2) infinite;
}

/* Exercise Card */
.exercise-card {
    background: var(--bg-white);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    box-shadow: var(--shadow-lg);
    border: 2px solid var(--border-light);
    animation: fadeIn var(--duration-500) ease;
}

.exercise-card h3 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin: 0 0 var(--space-4) 0;
    line-height: 1.4;
}

.exercise-rule {
    background: var(--bg-blue-50);
    border: 1px solid var(--border-blue);
    border-radius: var(--radius-md);
    padding: var(--space-4);
    margin-bottom: var(--space-6);
    font-size: var(--font-size-base);
    color: var(--text-secondary);
}

.exercise-rule strong {
    color: var(--text-primary);
    font-weight: var(--font-weight-semibold);
}

/* Answer Input */
.answer-input {
    margin-bottom: var(--space-6);
}

.answer-input input {
    width: 100%;
    padding: var(--space-4);
    font-size: var(--font-size-lg);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-lg);
    background: var(--bg-white);
    color: var(--text-primary);
    transition: all var(--duration-300) ease;
    box-sizing: border-box;
}

.answer-input input:focus {
    outline: none;
    border-color: var(--primary-green);
    box-shadow: 0 0 0 3px rgba(88, 204, 2, 0.1);
}

.answer-input input::placeholder {
    color: var(--text-muted);
}

/* Submit Button */
.submit-btn {
    background: var(--bg-gradient-primary);
    color: var(--text-white);
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--space-4) var(--space-8);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    cursor: pointer;
    transition: all var(--duration-300) ease;
    box-shadow: var(--shadow-md);
    position: relative;
    overflow: hidden;
}

.submit-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left var(--duration-500) ease;
}

.submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
}

.submit-btn:hover::before {
    left: 100%;
}

.submit-btn:active {
    transform: translateY(0);
}

/* Back Button */
.back-button {
    background: var(--bg-gradient-secondary);
    color: var(--text-white);
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-6);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    cursor: pointer;
    transition: all var(--duration-300) ease;
    box-shadow: var(--shadow-md);
    margin-bottom: var(--space-6);
    display: inline-block;
}

.back-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.back-button:active {
    transform: translateY(0);
}

/* Message Display */
.message {
    position: fixed;
    bottom: var(--space-6);
    right: var(--space-6);
    background: var(--bg-white);
    color: var(--text-primary);
    padding: var(--space-4) var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    border: 2px solid var(--border-light);
    font-weight: var(--font-weight-semibold);
    z-index: 1000;
    animation: slideInRight var(--duration-300) ease;
    max-width: 400px;
}

/* Loading States */
.loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-20);
    gap: var(--space-6);
    font-size: var(--font-size-xl);
    color: var(--text-secondary);
}

.loading-spinner {
    width: 60px;
    height: 60px;
    border: 4px solid var(--border-light);
    border-top: 4px solid var(--primary-green);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Responsive Design */
@media (min-width: 768px) {
    .level-grid {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--space-6);
    }
    
    .exercise-card {
        padding: var(--space-10);
    }
    
    .answer-input input {
        font-size: var(--font-size-xl);
        padding: var(--space-5);
    }
}

@media (min-width: 1024px) {
    .level-grid {
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    }
    
    .exercise-area {
        padding: var(--space-10);
    }
}

@media (min-width: 1440px) {
    .level-grid {
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    }
}

/* Quick Access Section */
.quick-access {
    background: var(--bg-white);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    border: 2px solid var(--border-light);
    box-shadow: var(--shadow-md);
    margin-top: var(--space-8);
}

.quick-access h3 {
    font-size: var(--font-size-xl);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
    font-weight: 700;
}

.quick-access p {
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
    line-height: 1.5;
}

.course-preview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-6);
}

.course-preview-card {
    background: var(--bg-white);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    border: 2px solid var(--border-light);
    cursor: pointer;
    transition: all var(--duration-300) ease;
    text-align: center;
    box-shadow: var(--shadow-sm);
}

.course-preview-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--secondary-blue);
}

.course-preview-card.unlocked {
    border-color: var(--secondary-blue);
}

.course-preview-card.locked {
    opacity: 0.7;
    background: var(--bg-tertiary);
}

.course-preview-icon {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-3);
}

.course-preview-card h4 {
    font-size: var(--font-size-base);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
    font-weight: 600;
}

.view-all-courses-btn {
    background: var(--bg-gradient-blue);
    color: var(--text-white);
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-6);
    font-size: var(--font-size-base);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--duration-300) ease;
    box-shadow: var(--shadow-md);
}

.view-all-courses-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

/* Locked Message */
.locked-message {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    text-align: center;
    padding: var(--space-3);
    background: var(--bg-tertiary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-light);
}

/* Message */
.message {
    position: fixed;
    top: 20px;
    right: 20px;
    background: var(--primary-green);
    color: var(--text-white);
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    z-index: var(--z-fixed);
    animation: slideInRight var(--duration-300) ease;
}

@keyframes slideInRight {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

/* Enhanced Registration */
.enhanced-registration {
    max-width: 600px;
    margin: 0 auto;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
}

.form-row:last-child {
    grid-template-columns: 1fr;
}

/* Auth Styles */
.auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-gradient);
    padding: var(--space-4);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
}

.auth-card {
    background: var(--bg-white);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    box-shadow: var(--shadow-2xl);
    border: 2px solid var(--border-light);
    max-width: 500px;
    width: 100%;
    margin: 0 auto;
    transform: translateY(0);
}

.auth-header {
    text-align: center;
    margin-bottom: var(--space-6);
}

.auth-logo {
    font-size: var(--font-size-5xl);
    margin-bottom: var(--space-4);
    animation: float 3s ease-in-out infinite;
}

.auth-header h2 {
    font-size: var(--font-size-2xl);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
    font-weight: 700;
}

.auth-header p {
    color: var(--text-secondary);
    line-height: 1.6;
}

.auth-tabs {
    display: flex;
    margin-bottom: var(--space-6);
    border-radius: var(--radius-lg);
    background: var(--bg-secondary);
    padding: var(--space-1);
}

.auth-tab {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    border: none;
    background: transparent;
    color: var(--text-secondary);
    font-weight: 600;
    cursor: pointer;
    border-radius: var(--radius-md);
    transition: all var(--duration-300) ease;
}

.auth-tab.active {
    background: var(--primary-green);
    color: var(--text-white);
}

.auth-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    width: 100%;
    max-width: 100%;
}

.auth-input {
    padding: var(--space-4);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    transition: all var(--duration-300) ease;
}

.auth-input:focus {
    outline: none;
    border-color: var(--primary-green);
    box-shadow: 0 0 0 3px rgba(88, 204, 2, 0.1);
}

.auth-submit {
    background: var(--bg-gradient-green);
    color: var(--text-white);
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    font-size: var(--font-size-lg);
    font-weight: 700;
    cursor: pointer;
    transition: all var(--duration-300) ease;
    box-shadow: var(--shadow-md);
}

.auth-submit:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

/* Responsive Design */
@media (max-width: 1200px) {
    .main-content {
        max-width: 100%;
        padding: var(--space-3);
        gap: var(--space-4);
    }
    
    .sidebar {
        width: 280px;
    }
    
    .content-area {
        padding: var(--space-4);
    }
}

@media (max-width: 768px) {
    .header-content {
        flex-direction: column;
        gap: var(--space-4);
        text-align: center;
    }
    
    .header-main {
        flex-direction: column;
        gap: var(--space-4);
    }
    
    .header-navigation {
        flex-direction: column;
        gap: var(--space-2);
    }
    
    .main {
        padding-top: 180px; /* Significantly increased padding for mobile to account for taller header */
    }
    
    .user-info {
        flex-direction: column;
        gap: var(--space-3);
    }
    
    .user-stats {
        flex-direction: column;
        gap: var(--space-2);
    }
    
    .main-content {
        flex-direction: column;
        gap: var(--space-4);
    }
    
    .sidebar {
        width: 100%;
        position: static;
        min-height: auto;
    }
    
    .content-area {
        padding: var(--space-4);
    }
    
    .class-grid {
        grid-template-columns: 1fr;
    }
    
    .course-grid {
        grid-template-columns: 1fr;
    }
    
    .level-grid {
        grid-template-columns: 1fr;
    }
    
    .course-preview-grid {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }
    
    .form-row {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 480px) {
    .header {
        padding: var(--space-3);
    }
    
    .header h1 {
        font-size: var(--font-size-lg);
    }
    
    .header-emoji {
        font-size: var(--font-size-xl);
    }
    
    .nav-btn {
        padding: var(--space-2) var(--space-3);
        font-size: var(--font-size-xs);
    }
    
    .auth-card {
        padding: var(--space-6);
        margin: var(--space-3);
    }
    
    .welcome-screen {
        padding: var(--space-6);
        padding-top: var(--space-4); /* Consistent padding since main handles spacing */
    }
    
    .course-selection {
        padding-top: var(--space-4); /* Consistent padding since main handles spacing */
    }
    
    .level-selection {
        padding-top: var(--space-4); /* Consistent padding since main handles spacing */
    }
    
    .content-area {
        padding-top: var(--space-4); /* Consistent padding since main handles spacing */
    }
    
    .welcome-emoji {
        font-size: var(--font-size-4xl);
    }
    
    .welcome-screen h2 {
        font-size: var(--font-size-2xl);
    }
    
    .exercise-area {
        padding: var(--space-4);
        margin-left: var(--space-2);
        margin-right: var(--space-2);
    }
    
    .exercise-card {
        padding: var(--space-6);
    }
    
    .exercise-card h3 {
        font-size: var(--font-size-lg);
    }
}

/* Fix for content overflow */
.content-area {
    max-width: 100%;
    overflow-x: hidden;
}

/* Ensure proper spacing for all elements */
* {
    box-sizing: border-box;
}

body {
    margin: 0;
    padding: 0;
    font-family: var(--font-family);
    background: var(--bg-secondary);
    overflow-x: hidden;
}

.app {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    width: 100%;
    background: var(--bg-secondary);
    position: relative;
}

.app > header {
    flex-shrink: 0;
    z-index: 1000;
}

.app > main {
    flex: 1;
    display: flex;
    flex-direction: row;
    min-height: calc(100vh - 140px);
    position: relative;
    z-index: 50;
}

.app > footer {
    flex-shrink: 0;
    z-index: 1000;
}

/* Footer Styles */
.footer {
    background: var(--bg-primary);
    border-top: 2px solid var(--border-accent);
    padding: var(--space-8) 0 var(--space-4) 0;
    margin-top: auto;
    box-shadow: var(--shadow-lg);
}

.footer-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-8);
}

.footer-section h4 {
    color: var(--primary-green);
    font-size: var(--font-size-lg);
    font-weight: 700;
    margin-bottom: var(--space-4);
    display: flex;
    align-items: center;
    gap: var(--space-2);
}

.footer-section p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-3);
}

.footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.footer-section ul li {
    color: var(--text-secondary);
    padding: var(--space-1) 0;
    cursor: pointer;
    transition: color var(--duration-300) ease;
}

.footer-section ul li:hover {
    color: var(--primary-green);
}

.footer-bottom {
    border-top: 1px solid var(--border-light);
    margin-top: var(--space-6);
    padding-top: var(--space-4);
    text-align: center;
}

.footer-bottom p {
    color: var(--text-muted);
    font-size: var(--font-size-sm);
    margin: 0;
}

/* Responsive Footer */
@media (max-width: 768px) {
    .footer-content {
        grid-template-columns: 1fr;
        gap: var(--space-6);
        text-align: center;
    }
    
    .footer-section h4 {
        justify-content: center;
    }
}

/* Enhanced Exercise Styles */
.exercise-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-4);
    gap: var(--space-4);
}

.exercise-header h3 {
    flex: 1;
    margin: 0;
    color: var(--text-primary);
}

.voice-controls {
    display: flex;
    gap: var(--space-2);
    flex-shrink: 0;
}

.voice-btn {
    background: var(--bg-primary);
    color: var(--text-white);
    border: none;
    border-radius: var(--radius-md);
    padding: var(--space-2) var(--space-3);
    font-size: var(--font-size-sm);
    cursor: pointer;
    transition: all var(--duration-2);
    display: flex;
    align-items: center;
    gap: var(--space-1);
}

.voice-btn:hover:not(:disabled) {
    background: var(--bg-primary-dark);
    transform: translateY(-1px);
}

.voice-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.exercise-hint {
    background: var(--bg-info-light);
    border: 1px solid var(--border-info);
    border-radius: var(--radius-md);
    padding: var(--space-3);
    margin-bottom: var(--space-4);
    color: var(--text-info);
}

.exercise-options {
    margin-bottom: var(--space-4);
}

.options-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-3);
    margin-top: var(--space-2);
}

.option-btn {
    background: var(--bg-white);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-md);
    padding: var(--space-3);
    cursor: pointer;
    transition: all var(--duration-2);
    text-align: center;
    font-size: var(--font-size-base);
}

.option-btn:hover {
    border-color: var(--border-primary);
    background: var(--bg-primary-light);
}

.option-btn.selected {
    border-color: var(--border-primary);
    background: var(--bg-primary);
    color: var(--text-white);
}

.exercise-actions {
    display: flex;
    gap: var(--space-3);
    align-items: center;
    flex-wrap: wrap;
}

.hint-btn {
    background: var(--bg-secondary);
    color: var(--text-secondary);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    padding: var(--space-2) var(--space-3);
    cursor: pointer;
    transition: all var(--duration-2);
    font-size: var(--font-size-sm);
}

.hint-btn:hover {
    background: var(--bg-secondary-dark);
    border-color: var(--border-secondary);
}

/* Voice Controls for Audio Exercises */
.voice-controls {
    display: flex;
    gap: var(--space-3);
    align-items: center;
    flex-wrap: wrap;
}

.voice-btn {
    background: var(--primary-green);
    color: var(--text-white);
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-4);
    font-size: var(--font-size-sm);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--duration-200) ease;
    display: flex;
    align-items: center;
    gap: var(--space-2);
    min-width: 120px;
    justify-content: center;
    box-shadow: var(--shadow-sm);
}

.voice-btn:hover {
    background: var(--primary-green-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.voice-btn:active {
    transform: translateY(0);
}

.voice-btn:disabled {
    background: var(--secondary-orange);
    cursor: not-allowed;
    animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}

/* Audio feedback messages */
.audio-feedback {
    background: var(--bg-info-light);
    color: var(--text-info);
    padding: var(--space-3);
    border-radius: var(--radius-md);
    margin-top: var(--space-3);
    font-size: var(--font-size-sm);
    border-left: 4px solid var(--border-info);
}

/* Recording indicator */
.recording-indicator {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--secondary-red);
    font-weight: 600;
    animation: blink 1s ease-in-out infinite;
}

@keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0.5; }
}

/* Exercise Navigation and Info */
.exercise-info {
    flex: 1;
}

.exercise-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: var(--space-2);
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.exercise-number {
    background: var(--bg-info-light);
    color: var(--text-info);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-weight: 600;
}

.exercise-points {
    background: var(--secondary-orange);
    color: var(--text-white);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-weight: 600;
}

/* Navigation Buttons */
.navigation-buttons {
    display: flex;
    gap: var(--space-3);
    margin-top: var(--space-4);
}

.nav-btn {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-4);
    font-size: var(--font-size-sm);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--duration-200) ease;
    display: flex;
    align-items: center;
    gap: var(--space-2);
    min-width: 120px;
    justify-content: center;
}

.nav-btn:hover:not(:disabled) {
    background: var(--primary-green);
    color: var(--text-white);
    border-color: var(--primary-green);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.nav-btn:disabled {
    background: var(--bg-disabled);
    color: var(--text-disabled);
    border-color: var(--border-disabled);
    cursor: not-allowed;
    opacity: 0.5;
}

.prev-btn:hover:not(:disabled) {
    background: var(--secondary-blue);
    border-color: var(--secondary-blue);
}

.next-btn:hover:not(:disabled) {
    background: var(--primary-green);
    border-color: var(--primary-green);
}

/* Exercise Actions Layout */
.exercise-actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  margin-top: var(--space-6);
}

/* Course Progress Information */
.course-progress-info {
  margin: var(--space-3) 0;
  width: 100%;
}

.progress-bar {
  width: 100%;
  height: 8px;
  background-color: var(--bg-disabled);
  border-radius: var(--radius-sm);
  overflow: hidden;
  margin-bottom: var(--space-2);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-green), var(--primary-green-light));
  border-radius: var(--radius-sm);
  transition: width var(--duration-300) ease;
}

.progress-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

.progress-text {
  font-weight: 600;
  color: var(--text-primary);
}

.accuracy-text {
  font-weight: 600;
  color: var(--primary-green);
}

/* Enhanced Course Cards */
.course-preview-card {
  position: relative;
  overflow: visible;
}

.course-preview-card.unlocked .progress-fill {
  background: linear-gradient(90deg, var(--primary-green), var(--primary-green-light));
}

.course-preview-card.locked .progress-fill {
  background: linear-gradient(90deg, var(--text-disabled), var(--bg-disabled));
}

.course-preview-card.locked .progress-stats {
  opacity: 0.6;
}

/* Course Status Enhancements */
.course-status {
  margin-top: var(--space-2);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-md);
  font-size: var(--font-size-xs);
  font-weight: 600;
  text-align: center;
}

.course-preview-card.unlocked .course-status {
  background-color: var(--bg-success-light);
  color: var(--text-success);
}

.course-preview-card.locked .course-status {
  background-color: var(--bg-disabled);
  color: var(--text-disabled);
}

/* Completed Course Status */
.course-preview-card .course-status:contains("üèÜ") {
  background: linear-gradient(135deg, var(--secondary-orange), #ffb347);
  color: var(--text-white);
  box-shadow: 0 2px 8px rgba(255, 150, 0, 0.3);
}

@media (max-width: 768px) {
  .exercise-meta {
    flex-direction: column;
    gap: var(--space-2);
    align-items: flex-start;
  }

  .navigation-buttons {
    flex-direction: column;
    gap: var(--space-2);
  }

  .nav-btn {
    min-width: 100%;
  }

  .progress-stats {
    font-size: var(--font-size-xxs);
  }

  .course-progress-info {
    margin: var(--space-2) 0;
  }
}

/* ==================== COMPREHENSIVE RESPONSIVE DESIGN ==================== */
